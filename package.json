{
  "version": "0.1.1",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "avro-sr-codegen": "bin/cli.js"
  },
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "avro-sr-codegen",
  "author": "David Maier",
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.5",
    "@types/yargs": "^17.0.8",
    "husky": "^7.0.4",
    "size-limit": "^7.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "avro-typescript": "^1.1.0",
    "axios": "^0.24.0",
    "esm": "^3.2.25",
    "yargs": "^17.3.1"
  }
}
